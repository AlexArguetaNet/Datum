<%- include('../partials/header.ejs') %>

    <div class="page-container form-page">

        <div class="content-container con-1">
            <h2><%- form.name %></h2>
            <a href="/form/edit/<%- form._id %>">Edit</a>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <a target="_blank" href="/form/pdf/<%- form._id %>">PDF</a>
        </div>

        <div class="table-container">

            <table id="form-table">
    
                <tr class="form-columns" id="form-columns">
                    <% form.columns.forEach((column) => { %>

                        <td><%- column %></td>

                    <% }) %>
                </tr>

                <% form.entries.forEach((entry) => { %>

                    <tr>

                        <% entry.data.forEach((cell) => { %>

                            <td><%- cell %></td>

                        <% }) %>

                    </tr>

                <% }) %>

            </table>

        </div>

    </div>

<%- include('../partials/footer.ejs') %>